#include "Func-Menu.h"

// Punto 1 y 2
float PedirFlotante(void)
{
	float unFlotante;
	printf("Ingrese numero: ");
	scanf("%f \n",&unFlotante);
	return unFlotante;
}
int MostrarMenu(int opcionMenu, float numeroA, float numeroB)
{
	int opcion;
	if(opcionMenu !=5)
	{
	 printf("Elija opcion: \n");
	 printf("1- Ingresar 1° operando (A=%.2f)\n",numeroA);
	 printf("2- Ingresar 2° operando (B=%.2f)\n",numeroB);
	 printf("3- Calcular todas las operaciones\n");
	 	 printf("	a) Calcular la suma (%.2f+%.2f)\n",numeroA,numeroB);
	 	 printf("	b) Calcular la resta (%.2f-%.2f)\n",numeroA,numeroB);
	 	 printf("	c) Calcular la division (%.2f/%.2f)\n",numeroA,numeroB);
	 	 printf("	d) Calcular la multiplicacion (%.2f*%.2f)\n",numeroA,numeroB);
	 	 printf("	e) Calcular la factorial (%.2f!)\n",numeroA);
	 printf("4- Informar resultados\n");
	 printf("5- Salir\n");
	 scanf("%d",&opcion);

	}
	return opcion;
}

// Punto 4
void MostrarSuma(float numeroA,float numeroB,int suma)
{
	printf("El resultado de %.2f + %.2f es: %d\n", numeroA,numeroB,suma);
}
void MostrarResta(float numeroA,float numeroB,int resta)
{
		printf("El resultado de %.2f - %.2f es: %d\n", numeroA,numeroB,resta);
}
void MostrarDivision(float numeroA,float numeroB,int division)
{
	printf("El resultado de %.2f / %.2f es: %d\n", numeroA,numeroB,division);
}
void MostrarMultiplicacion(float numeroA,float numeroB,int multiplicacion)
{
	printf("El resultado de %.2f * %.2f es: %d\n", numeroA,numeroB,multiplicacion);
}
void MostrarFactorial(float numeroA,int factorial)
{
	printf("El resultado de %.2f ! es: %d\n", numeroA,factorial);
}

// Extras
void MensajeControl(void)
{
	printf("Primero debe realizar las opciones anteriores!\n \n");
}


