#include <stdio.h>
#include <stdlib.h>
#include "Func-Matematicas.h"
#include "Func-Menu.h"

int main(void) {
	setbuf(stdout,NULL);

	float numeroA;
	float numeroB;
	int suma;
	int resta;
	int division;
	int multiplicacion;
	int factorial;
	int opcion;

	int flag1 =0;
	int flag2 =0;
	int flag3 =0;

	do
	{
	/*printf("Elija opcion: \n");
	printf("1- Ingresar 1° operando (A=x)\n");
	printf("2- Ingresar 2° operando (B=y)\n");
	printf("3- Calcular todas las operaciones\n");
	printf("4- Informar resultados\n");
	printf("5- Salir\n");
	scanf("%d",&opcion);*/
	opcion=MostrarMenu(flag1,flag2,numeroA,numeroB);

	switch(opcion)
	{
	case 1:
		numeroA = PedirFlotante();
		flag1=1;
		break;
	case 2:
		numeroB = PedirFlotante();
		flag2=1;
		break;
	case 3:
		if (flag1 == 1 && flag2 == 1)
		{
		suma = Sumar(numeroA,numeroB);
		resta = Restar(numeroA,numeroB);
		division = Dividir(numeroA,numeroB);
		multiplicacion = Multiplicar(numeroA,numeroB);
		factorial = Factorizar(numeroA);
		flag3=1;
		} else
		{
			MensajeControl();
		}
		break;
	case 4:
		if (flag1 == 1 && flag2 == 1 && flag3 == 1)
		{
			MostrarSuma(numeroA,numeroB,suma);
			MostrarResta(numeroA,numeroB,resta);
			MostrarDivision(numeroA,numeroB,division);
			MostrarMultiplicacion(numeroA,numeroB,multiplicacion);
			MostrarFactorial(numeroA,factorial);
		} else
		{
			MensajeControl();
		}
		break;
	case 5:
		printf("¡Gracias por usar esta calculadora!\n");
		break;
	}

	}while (opcion == 1 || opcion == 2 || opcion == 3 || opcion == 4);

	return EXIT_SUCCESS;
}




